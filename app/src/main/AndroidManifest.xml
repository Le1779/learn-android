<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="kevin.le.learnandroid">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.bluetooth_le"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnAndroid"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".view.EditTextActivity"
            android:exported="false"
            android:theme="@style/NoTitleBarAppTheme" />
        <activity
            android:name=".view.NFCActivity"
            android:exported="false"
            android:theme="@style/NoTitleBarAppTheme" />
        <activity
            android:name=".view.SpinnerActivity"
            android:exported="false"
            android:theme="@style/NoTitleBarAppTheme" />
        <activity android:name=".view.StringConditionActivity" />
        <activity android:name=".view.WebViewActivity" />
        <activity android:name=".view.DeviceInfoAreaActivity" />
        <activity android:name=".view.ShadowImageViewActivity" />
        <activity android:name=".view.DeviceListActivity" />
        <activity
            android:name=".view.ScaleActivity"
            android:theme="@style/NoTitleBarAppTheme" />
        <activity
            android:name=".view.SliderActivity"
            android:theme="@style/NoTitleBarAppTheme" />
        <activity
            android:name=".view.ButtonsActivity"
            android:theme="@style/NoTitleBarAppTheme" />
        <activity
            android:name=".view.LearnBLEActivity"
            android:theme="@style/NoTitleBarAppTheme" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>