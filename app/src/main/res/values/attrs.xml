<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--ShadowConstraintLayout-->
    <attr name="shadow_constraint_layout_shadow_color" format="color" />
    <attr name="shadow_constraint_layout_background_color" format="color" />
    <attr name="shadow_constraint_layout_corner_radius_ratio" format="float" type="dimen" />
    <attr name="shadow_constraint_layout_shadow_radius" format="integer" type="dimen" />
    <attr name="shadow_constraint_layout_offset_y" format="dimension" />

    <declare-styleable name="ShadowConstraintLayout">
        <attr name="shadow_constraint_layout_shadow_color" />
        <attr name="shadow_constraint_layout_background_color" />
        <attr name="shadow_constraint_layout_corner_radius_ratio" />
        <attr name="shadow_constraint_layout_shadow_radius" />
        <attr name="shadow_constraint_layout_offset_y" />
    </declare-styleable>

    <!--TextButton-->
    <attr name="text_button_icon" format="reference" />
    <attr name="text_button_title" format="string" />
    <attr name="text_button_text_size" format="dimension" />
    <attr name="text_button_tint" format="color" />

    <declare-styleable name="TextButton">
        <attr name="text_button_icon" />
        <attr name="text_button_title" />
        <attr name="text_button_text_size" />
        <attr name="text_button_tint" />
    </declare-styleable>

    <!--CircularSlider-->
    <attr name="stroke_width" format="integer" type="dimen" />
    <attr name="stroke_color" format="color" />
    <attr name="angle_begin" format="integer" type="dimen" />
    <attr name="angle_sweep" format="integer" type="dimen" />
    <attr name="clockwise" format="boolean" />

    <declare-styleable name="CircularSlider">
        <attr name="stroke_width" />
        <attr name="stroke_color" />
        <attr name="angle_begin" />
        <attr name="angle_sweep" />
        <attr name="clockwise" />
    </declare-styleable>

    <attr name="scale_width" format="dimension" />
    <attr name="scale_height" format="dimension" />
    <attr name="scale_color" format="color" />
    <attr name="scale_deviation" format="float" type="dimen" />
    <attr name="unit_divide" format="float" type="dimen" />
    <attr name="anchor_point" format="integer" type="dimen" />

    <!--CircularScale-->
    <declare-styleable name="CircularScale">
        <!--Angle-->
        <attr name="angle_begin" />
        <attr name="angle_sweep" />
        <!--Scale-->
        <attr name="scale_width" />
        <attr name="scale_height" />
        <attr name="scale_color" />
        <attr name="scale_deviation" />

        <attr name="unit_divide" />
        <attr name="anchor_point" />
    </declare-styleable>

    <!--ShadowImageView-->
    <declare-styleable name="ShadowImageView">
        <attr name="shadowRadius" format="integer" type="dimen" />
        <attr name="shadowColor" format="color" />
    </declare-styleable>
</resources>